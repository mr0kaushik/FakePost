<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Twitter">


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimary"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/MenuStyle"
        app:titleTextColor="@color/colorWhite" />

    <RelativeLayout
        android:layout_below="@id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnTextType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/rounded_shape"
            android:backgroundTint="@color/colorTwitter"
            android:drawablePadding="0dp"
            android:drawableStart="@drawable/twitter_text_button"
            android:letterSpacing=".2"
            android:textFontWeight="500"
            android:minWidth="250dp"
            android:minHeight="80dp"
            android:paddingStart="15dp"
            android:paddingTop="-5dp"
            android:paddingEnd="10dp"
            android:text="@string/text_tweet"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:typeface="normal"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"/>

        <Button
            android:id="@+id/btnImageType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/rounded_shape"
            android:backgroundTint="@color/colorTwitter"
            android:text="@string/image_tweet"
            android:layout_below="@id/btnTextType"
            android:drawableStart="@drawable/twitter_image_button"
            android:drawablePadding="0dp"
            android:minHeight="80dp"
            android:minWidth="250dp"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:paddingTop="-5dp"
            android:textSize="18sp"
            android:letterSpacing=".2"
            android:textFontWeight="500"
            android:typeface="normal"
            android:textColor="@android:color/white"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"/>

    </RelativeLayout>

</RelativeLayout>